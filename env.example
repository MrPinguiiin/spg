# Saweria Payment Gateway Configuration

# Server Configuration
# HOST=0.0.0.0  # Default for production
# PORT=8000     # Render will override with $PORT
DEBUG=false     # Set to false for production

# Rate Limiting
RATE_LIMIT_CALCULATE_FEE=30/minute
RATE_LIMIT_QRIS_GENERATOR=20/minute
RATE_LIMIT_PAYMENT_STATUS=50/minute

# Request Configuration
REQUEST_TIMEOUT=30.0
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY=0.5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/payment_gateway.log
